<Window x:Class="ZKTecoManager.EmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ZKTecoManager.Controls"
        mc:Ignorable="d"
        Title="إدارة الموظفين - Employee Management" Height="750" Width="1300"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinWidth="1000"
        MinHeight="600"
        FlowDirection="RightToLeft"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="20,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#5568D3" Offset="0"/>
                                            <GradientStop Color="#6A3E8F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edit Button (Orange) -->
        <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="20,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                    <GradientStop Color="#D97706" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#F59E0B" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DC8B05" Offset="0"/>
                                            <GradientStop Color="#B45309" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button (Red) -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="20,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DC2626" Offset="0"/>
                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Assign Button (Green) -->
        <Style x:Key="AssignButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="20,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0EA06E" Offset="0"/>
                                            <GradientStop Color="#047857" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
        </Style>

        <!-- DataGrid Column Header -->
        <Style x:Key="ModernColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- DataGrid Cell -->
        <Style x:Key="ModernCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Row -->
        <Style x:Key="ModernRow" TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F9FC"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.2" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="👥" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="إدارة الموظفين"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="15,0"
                                FlowDirection="LeftToRight">
                        <Button Content="─" Style="{StaticResource WinBtn}" Click="MinimizeButton_Click" Margin="5,0"/>
                        <Button Content="✕" Style="{StaticResource WinBtn}" Click="CloseButton_Click" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="25,20,25,25">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F9FAFB" Offset="0"/>
                        <GradientStop Color="#F3F4F6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter Section -->
                <Border Grid.Row="0" 
                        Background="White" 
                        CornerRadius="12" 
                        Padding="25"
                        Margin="10,10,10,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   VerticalAlignment="Center" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Margin="0,0,15,0"
                                   TextAlignment="Right">
                            <Run Text="🔍 بحث"/>
                        </TextBlock>

                        <TextBox Grid.Column="1"
                                 x:Name="UserSearchTextBox" 
                                 Style="{StaticResource SearchBox}"
                                 TextChanged="Filters_Changed"
                                 VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="2" 
                                   Text="القسم" 
                                   VerticalAlignment="Center" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Margin="25,0,15,0"
                                   TextAlignment="Right"/>

                        <ComboBox Grid.Column="3"
                                  x:Name="DepartmentFilterComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="Filters_Changed" 
                                  DisplayMemberPath="DeptName"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Margin="10,0,10,20"
                            HorizontalAlignment="Right">
                    <Button Style="{StaticResource PrimaryButton}"
                            Click="AddUser_Click"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="إضافة موظف"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource EditButton}"
                            Click="EditUser_Click"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✏️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="تعديل موظف"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource DeleteButton}"
                            Click="DeleteUser_Click"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🗑️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="حذف موظف"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource AssignButton}"
                            Click="AssignShift_Click"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🗓️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="تعيين وردية"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource PrimaryButton}"
                            Click="ViewHistory_Click"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📜" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="سجل التغييرات"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Employee List DataGrid -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="12"
                        Margin="10">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- DataGrid Header -->
                        <Border Grid.Row="0" Background="#F3F4F6"
                                CornerRadius="12,12,0,0"
                                Padding="20,0">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                <TextBlock Text="📋" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="قائمة الموظفين"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#1F2937"/>
                            </StackPanel>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" x:Name="UsersGrid"
                                  Style="{StaticResource ModernDataGrid}"
                                  ColumnHeaderStyle="{StaticResource ModernColumnHeader}"
                                  CellStyle="{StaticResource ModernCell}"
                                  RowStyle="{StaticResource ModernRow}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  SelectionMode="Extended">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="60">
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="SelectAllCheckBox" Click="SelectAllCheckBox_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="رقم الموظف" Binding="{Binding UserId}" Width="100" IsReadOnly="True"/>
                                <DataGridTextColumn Header="اسم الموظف" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="القسم" Binding="{Binding Departments}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الوردية" Binding="{Binding ShiftName}" Width="150" IsReadOnly="True"/>
                                <DataGridTextColumn Header="رقم البطاقة" Binding="{Binding BadgeNumber}" Width="120" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="0,0,12,12" Padding="20,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button x:Name="PreviousPageButton" Content="◀ السابق"
                                            Click="PreviousPage_Click"
                                            Background="Transparent" BorderThickness="1" BorderBrush="#E5E7EB"
                                            Padding="15,8" Margin="5,0" Cursor="Hand"
                                            FontFamily="Segoe UI, Tahoma, Arial"/>
                                    <TextBlock x:Name="PageInfoText" Text="الصفحة 1 من 1"
                                               VerticalAlignment="Center"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="#374151" Margin="15,0"/>
                                    <Button x:Name="NextPageButton" Content="التالي ▶"
                                            Click="NextPage_Click"
                                            Background="Transparent" BorderThickness="1" BorderBrush="#E5E7EB"
                                            Padding="15,8" Margin="5,0" Cursor="Hand"
                                            FontFamily="Segoe UI, Tahoma, Arial"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay - Blocks all interactions while visible -->
            <controls:LoadingOverlay x:Name="LoadingOverlay" Grid.RowSpan="2"/>
        </Grid>
    </Border>
</Window>
