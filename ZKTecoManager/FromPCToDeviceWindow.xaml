<Window x:Class="ZKTecoManager.FromPCToDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZKTecoManager"
        xmlns:controls="clr-namespace:ZKTecoManager.Controls"
        mc:Ignorable="d"
        Title="من الكمبيوتر إلى الجهاز - From PC To Device" Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Upload Button Style -->
        <Style x:Key="UploadButton" TargetType="Button">
            <Setter Property="Height" Value="80"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Opacity="0.4" ShadowDepth="0" BlurRadius="15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0EA06E" Offset="0"/>
                                            <GradientStop Color="#047857" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
        </Style>

        <!-- TreeView Style -->
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.2" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="⬆️" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="رفع البيانات من الكمبيوتر إلى الجهاز" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Style="{StaticResource WinBtn}" 
                            Content="✕" 
                            Click="CloseButton_Click"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Margin="15,0"
                            FlowDirection="LeftToRight"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F9FAFB" Offset="0"/>
                        <GradientStop Color="#F3F4F6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Panel: Data Grids -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Departments Panel -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="12" 
                            Margin="0,0,10,0"
                            Padding="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" 
                                    Background="#F3F4F6" 
                                    CornerRadius="8" 
                                    Padding="10,8" 
                                    Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="🏢" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="الأقسام" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#1F2937"/>
                                </StackPanel>
                            </Border>

                            <!-- TreeView -->
                            <TreeView Grid.Row="1" x:Name="DepartmentTreeView">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <TextBlock Text="{Binding Name}"/>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                    </Border>

                    <!-- Users Panel -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            CornerRadius="12" 
                            Margin="5,0"
                            Padding="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" 
                                    Background="#F3F4F6" 
                                    CornerRadius="8" 
                                    Padding="10,8" 
                                    Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="الموظفين" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#1F2937"/>
                                </StackPanel>
                            </Border>

                            <!-- Search Box -->
                            <StackPanel Grid.Row="1" 
                                        Orientation="Horizontal" 
                                        Margin="0,0,0,15"
                                        HorizontalAlignment="Right">
                                <TextBox x:Name="UserSearchTextBox" 
                                         Style="{StaticResource SearchBox}"
                                         Width="200"
                                         TextChanged="UserSearchTextBox_TextChanged"/>
                                <TextBlock Text="بحث:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"
                                           FontWeight="SemiBold"
                                           Foreground="#374151"/>
                            </StackPanel>

                            <!-- DataGrid -->
                            <DataGrid Grid.Row="2" 
                                      x:Name="UsersGrid" 
                                      Style="{StaticResource ModernDataGrid}"
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False"
                                      SelectionMode="Extended">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="اختيار" Width="60"/>
                                    <DataGridTextColumn Header="الرقم" Binding="{Binding UserId}" IsReadOnly="True" Width="60"/>
                                    <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="رقم البطاقة" Binding="{Binding BadgeNumber}" IsReadOnly="True" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Devices Panel -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="12" 
                            Margin="10,0,0,0"
                            Padding="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" 
                                    Background="#F3F4F6" 
                                    CornerRadius="8" 
                                    Padding="10,8" 
                                    Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="📱" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="الأجهزة" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#1F2937"/>
                                </StackPanel>
                            </Border>

                            <!-- DataGrid -->
                            <DataGrid Grid.Row="1" 
                                      x:Name="DevicesGrid" 
                                      Style="{StaticResource ModernDataGrid}"
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False"
                                      SelectionMode="Extended">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="اختيار" Width="60"/>
                                    <DataGridTextColumn Header="الجهاز" Binding="{Binding MachineAlias}" Width="*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="المستخدمين" IsReadOnly="True" Width="90"/>
                                    <DataGridTextColumn Header="البصمات" IsReadOnly="True" Width="90"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Bottom Panel: Options & Upload -->
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="12" 
                        Padding="25" 
                        Margin="10,15,10,10">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Upload Options -->
                        <Border Grid.Column="0" 
                                Background="#F9FAFB" 
                                CornerRadius="10" 
                                Padding="20,15">
                            <StackPanel>
                                <TextBlock Text="خيارات الرفع" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#1F2937"
                                           Margin="0,0,0,15"
                                           TextAlignment="Right"/>
                                <CheckBox x:Name="UserInfoCheckBox" 
                                          Content="معلومات المستخدم" 
                                          IsChecked="True"/>
                                <CheckBox x:Name="FingerprintCheckBox" 
                                          Content="البصمة" 
                                          IsChecked="True"/>
                                <CheckBox x:Name="FaceCheckBox" 
                                          Content="الوجه"/>
                                <CheckBox x:Name="HighRateCheckBox" 
                                          Content="وضع السرعة العالية" 
                                          IsChecked="True"/>
                            </StackPanel>
                        </Border>

                        <!-- Upload Button -->
                        <Button Grid.Column="2" 
                                Style="{StaticResource UploadButton}"
                                Click="UploadButton_Click"
                                VerticalAlignment="Center"
                                Margin="25,0,0,0">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="⬆️" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="رفع البيانات" FontSize="15" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay - Blocks all interactions while visible -->
            <controls:LoadingOverlay x:Name="LoadingOverlay" Grid.RowSpan="2"/>
        </Grid>
    </Border>
</Window>
