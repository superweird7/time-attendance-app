<Window x:Class="ZKTecoManager.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="لوحة الإدارة - Admin Panel" Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinWidth="900"
        MinHeight="550"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Save Button Style (Green) -->
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0EA06E" Offset="0"/>
                                            <GradientStop Color="#047857" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Management Button Style (Orange) -->
        <Style x:Key="ManagementButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                    <GradientStop Color="#D97706" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#D97706" Offset="0"/>
                                            <GradientStop Color="#B45309" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style (Blue) -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                    <GradientStop Color="#2563EB" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#2563EB" Offset="0"/>
                                            <GradientStop Color="#1D4ED8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style (Red) -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DC2626" Offset="0"/>
                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <TextBlock x:Name="Placeholder"
                                           Text="بحث..."
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center"
                                           Margin="15,0"
                                           Visibility="Collapsed"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              Margin="5,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#667EEA"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="ModernListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="White"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DBEAFE"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#F3F4F6">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.25" ShadowDepth="5" BlurRadius="25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="&#128274;" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="لوحة إدارة الصلاحيات"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="15,0"
                                FlowDirection="LeftToRight">
                        <Button Content="&#9472;" Style="{StaticResource WinBtn}" Click="MinimizeButton_Click" Margin="5,0"/>
                        <Button Content="&#10005;" Style="{StaticResource WinBtn}" Click="CloseButton_Click" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Users List Panel -->
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="12"
                        Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.1" ShadowDepth="2" BlurRadius="15"/>
                    </Border.Effect>

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0"
                                Background="#F0F4FF"
                                CornerRadius="10"
                                Padding="15,12"
                                Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="&#128101;" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="المستخدمين"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#1F2937"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Search Box -->
                        <TextBox Grid.Row="1"
                                 x:Name="UserSearchTextBox"
                                 Style="{StaticResource SearchBox}"
                                 TextChanged="UserSearchTextBox_TextChanged"
                                 Margin="0,0,0,12"/>

                        <!-- Management Button (Only for Superadmin) -->
                        <Button Grid.Row="2"
                                x:Name="ManageDeptAdminsButton"
                                Content="&#128295; إدارة مدراء الأقسام"
                                Style="{StaticResource ManagementButton}"
                                Click="ManageDeptAdminsButton_Click"
                                Margin="0,0,0,8"
                                Visibility="Collapsed"/>

                        <!-- Activity Log Button -->
                        <Button Grid.Row="3"
                                x:Name="ActivityLogButton"
                                Content="&#128203; سجل النشاط"
                                Style="{StaticResource ActionButton}"
                                Click="ActivityLogButton_Click"
                                Margin="0,0,0,12"
                                Visibility="Collapsed"/>

                        <!-- Users List -->
                        <ListBox Grid.Row="4"
                                 x:Name="UsersListBox"
                                 Style="{StaticResource ModernListBox}"
                                 ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                 DisplayMemberPath="Name"
                                 SelectionChanged="UsersListBox_SelectionChanged"/>
                    </Grid>
                </Border>

                <!-- Details Panel -->
                <Border Grid.Column="1"
                        x:Name="DetailsPanel"
                        Background="White"
                        CornerRadius="12"
                        Margin="10,0,0,0"
                        Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.1" ShadowDepth="2" BlurRadius="15"/>
                    </Border.Effect>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="25">
                        <StackPanel>
                            <!-- Selected User Header -->
                            <Border Background="#F0F4FF"
                                    CornerRadius="12"
                                    Padding="20,18"
                                    Margin="0,0,0,25">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="المستخدم المحدد"
                                                   FontSize="12"
                                                   Foreground="#6B7280"
                                                   TextAlignment="Right"/>
                                        <TextBlock x:Name="SelectedUserName"
                                                   Text="لا يوجد مستخدم محدد"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#667EEA"
                                                   Margin="0,5,0,0"
                                                   TextAlignment="Right"/>
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            Background="#667EEA"
                                            CornerRadius="50"
                                            Width="55" Height="55"
                                            Margin="15,0,0,0">
                                        <TextBlock Text="&#128100;"
                                                   FontSize="26"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- User Role -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="دور المستخدم"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#1F2937"
                                           Margin="0,0,0,10"
                                           TextAlignment="Right"/>
                                <ComboBox x:Name="RoleComboBox"
                                          Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="RoleComboBox_SelectionChanged">
                                    <ComboBoxItem Content="مدير النظام (superadmin)"/>
                                    <ComboBoxItem Content="مدير القسم (deptadmin)"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- System Access Type -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="نوع الوصول للنظام - System Access"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#1F2937"
                                           Margin="0,0,0,10"
                                           TextAlignment="Right"/>
                                <ComboBox x:Name="SystemAccessTypeComboBox"
                                          Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="وصول كامل - Full Access" Tag="full_access"/>
                                    <ComboBoxItem Content="إجازات فقط - Leave Only" Tag="leave_only"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Permissions Panel -->
                            <StackPanel x:Name="PermissionsPanel" Visibility="Collapsed">
                                <!-- Permitted Departments -->
                                <Border Background="#F9FAFB"
                                        CornerRadius="12"
                                        Padding="20"
                                        Margin="0,0,0,15">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                            <TextBlock Text="&#127970;" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="الأقسام المسموحة"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="#1F2937"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Border Background="White"
                                                CornerRadius="8"
                                                Padding="12"
                                                BorderThickness="1"
                                                BorderBrush="#E5E7EB">
                                            <ListBox x:Name="DepartmentsListBox"
                                                     Height="140"
                                                     BorderThickness="0"
                                                     Background="Transparent">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="{Binding Name}"
                                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                    </StackPanel>
                                </Border>

                                <!-- Permitted Devices -->
                                <Border Background="#F9FAFB"
                                        CornerRadius="12"
                                        Padding="20"
                                        Margin="0,0,0,20">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                            <TextBlock Text="&#128241;" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="الأجهزة المسموحة"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="#1F2937"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Border Background="White"
                                                CornerRadius="8"
                                                Padding="12"
                                                BorderThickness="1"
                                                BorderBrush="#E5E7EB">
                                            <ListBox x:Name="DevicesListBox"
                                                     Height="140"
                                                     BorderThickness="0"
                                                     Background="Transparent">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="{Binding Name}"
                                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Save Button -->
                            <Button Content="&#128190;  حفظ التغييرات"
                                    Style="{StaticResource SaveButton}"
                                    Click="SaveChanges_Click"
                                    HorizontalAlignment="Left"
                                    Width="180"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Empty State (when no user selected) -->
                <Border Grid.Column="1"
                        x:Name="EmptyStatePanel"
                        Background="White"
                        CornerRadius="12"
                        Margin="10,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.1" ShadowDepth="2" BlurRadius="15"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="#F0F4FF"
                                CornerRadius="50"
                                Width="100" Height="100"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                            <TextBlock Text="&#128100;"
                                       FontSize="45"
                                       Foreground="#667EEA"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="اختر مستخدماً من القائمة"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="لعرض وتعديل صلاحياته"
                                   FontSize="14"
                                   Foreground="#9CA3AF"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
