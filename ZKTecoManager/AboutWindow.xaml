<Window x:Class="ZKTecoManager.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="حول البرنامج - About" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Background="Transparent"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.4" ShadowDepth="0" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#5568D3" Offset="0"/>
                                            <GradientStop Color="#6A3E8F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.3" ShadowDepth="5" BlurRadius="25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Margin="30,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="ℹ️" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="حول البرنامج" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Style="{StaticResource WinBtn}" 
                            Content="✕" 
                            Click="CloseButton_Click"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Margin="15,0"
                            FlowDirection="LeftToRight"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" Margin="40,0,40,0" VerticalAlignment="Center" Height="594">
                <!-- App Icon/Logo -->
                <Border Background="#F0F4FF" 
                        Width="80" 
                        Height="80" 
                        CornerRadius="40"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <TextBlock Text="🔐" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- App Name & Version -->
                <TextBlock Text="ZKTeco Manager" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>

                <TextBlock Text="الإصدار 1.0" 
                           FontSize="16" 
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"
                           TextAlignment="Center"/>

                <!-- Developer Info -->
                <Border Background="#F9FAFB" 
                        CornerRadius="10" 
                        Padding="20,15" 
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock FontSize="14" 
                                   Foreground="#374151"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center">
                            <Run Text="تم التطوير بواسطة"/>
                        </TextBlock>
                        <TextBlock Text="Abbas Mohammed" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#667EEA"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Contact Information -->
                <Border Background="#E8F5E9" 
                        CornerRadius="10" 
                        Padding="15,12" 
                        Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📞" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="للتواصل:" 
                                   FontSize="14" 
                                   Foreground="#374151"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="07828200600" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#10B981"/>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <TextBlock FontSize="13" 
                           Foreground="#6B7280"
                           TextWrapping="Wrap" 
                           Margin="0,15,0,0" 
                           TextAlignment="Center"
                           LineHeight="20">
                    <Run Text="برنامج إدارة أجهزة ZKTeco والموظفين وسجلات الحضور"/>
                    <LineBreak/>
                    <Run Text="ZKTeco Manager helps manage devices, employees, and attendance records"/>
                </TextBlock>

                <!-- Close Button -->
                <Button Content="✓  إغلاق" 
                        Style="{StaticResource CloseButton}"
                        Click="CloseButton_Click" 
                        Width="200"
                        Margin="0,25,0,0"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
