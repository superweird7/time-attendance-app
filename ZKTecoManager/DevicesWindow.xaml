<Window x:Class="ZKTecoManager.DevicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZKTecoManager"
        xmlns:controls="clr-namespace:ZKTecoManager.Controls"
        mc:Ignorable="d"
        Title="إدارة الأجهزة والحضور - Device Management" Height="750" Width="1300"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinWidth="1000"
        MinHeight="600"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Primary Button (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#5568D3" Offset="0"/>
                                            <GradientStop Color="#6A3E8F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edit Button (Orange) -->
        <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#F59E0B" Offset="0"/>
                                    <GradientStop Color="#D97706" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#F59E0B" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DC8B05" Offset="0"/>
                                            <GradientStop Color="#B45309" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button (Red) -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DC2626" Offset="0"/>
                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button (Green) -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0EA06E" Offset="0"/>
                                            <GradientStop Color="#047857" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Purple Button -->
        <Style x:Key="PurpleButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                    <GradientStop Color="#6366F1" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#8B5CF6" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#7C3AED" Offset="0"/>
                                            <GradientStop Color="#4F46E5" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add Button (Cyan) -->
        <Style x:Key="AddButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#06B6D4" Offset="0"/>
                                    <GradientStop Color="#0891B2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#06B6D4" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0891B2" Offset="0"/>
                                            <GradientStop Color="#0E7490" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Tab Style -->
        <Style x:Key="ModernTab" TargetType="TabItem">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                        ContentSource="Header"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#667EEA"/>
                                <Setter Property="Foreground" Value="#1F2937"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#667EEA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="ModernListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F3F4F6"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.2" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="301*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="📱" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="إدارة الأجهزة والحضور" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Margin="15,0"
                                FlowDirection="LeftToRight">
                        <Button Content="─" Style="{StaticResource WinBtn}" Click="MinimizeButton_Click" Margin="5,0"/>
                        <Button Content="✕" Style="{StaticResource WinBtn}" Click="CloseButton_Click" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content with Tabs -->
            <TabControl Grid.Row="1" 
                        Margin="25,15,25,25"
                        Background="Transparent"
                        BorderThickness="0" Grid.RowSpan="2">

                <!-- Device Management Tab -->
                <TabItem Style="{StaticResource ModernTab}">
                    <TabItem.Header>
                        <TextBlock>
                            <Run Text="🖥️ "/>
                            <Run Text="إدارة الأجهزة"/>
                        </TextBlock>
                    </TabItem.Header>

                    <Grid Margin="10,25,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Device Health Summary Panel -->
                        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20,15" Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Total Devices -->
                                <Border Grid.Column="0" Background="#EFF6FF" CornerRadius="10" Padding="20,12" Margin="0,0,15,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📱" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <StackPanel>
                                            <TextBlock Text="إجمالي الأجهزة" FontSize="12" Foreground="#6B7280"/>
                                            <TextBlock x:Name="TotalDevicesText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#3B82F6"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Online Devices -->
                                <Border Grid.Column="1" Background="#D1FAE5" CornerRadius="10" Padding="20,12" Margin="0,0,15,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🟢" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="متصل" FontSize="12" Foreground="#047857"/>
                                            <TextBlock x:Name="OnlineDevicesText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#10B981"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Offline Devices -->
                                <Border Grid.Column="2" Background="#FEE2E2" CornerRadius="10" Padding="20,12" Margin="0,0,15,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔴" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <StackPanel>
                                            <TextBlock Text="غير متصل" FontSize="12" Foreground="#B91C1C"/>
                                            <TextBlock x:Name="OfflineDevicesText" Text="0" FontSize="22" FontWeight="Bold" Foreground="#EF4444"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Location Filter -->
                                <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                                    <TextBlock Text="فلتر الموقع:" FontSize="11" Foreground="#6B7280" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="LocationFilterComboBox"
                                              Width="150"
                                              Height="35"
                                              SelectionChanged="LocationFilter_Changed"/>
                                </StackPanel>

                                <!-- Last Check Time -->
                                <StackPanel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Text="آخر فحص:" FontSize="11" Foreground="#6B7280"/>
                                    <TextBlock x:Name="LastCheckTimeText" Text="--:--:--" FontSize="14" FontWeight="SemiBold" Foreground="#374151"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource PrimaryButton}"
                                    Click="AddMachine_Click"
                                    Margin="0,0,0,0" Width="160">
                                <TextBlock>
                                    <Run Text="➕ "/>
                                    <Run Text="إضافة جهاز"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource EditButton}"
                                    Click="EditMachine_Click" Width="117">
                                <TextBlock>
                                    <Run Text="✏️ "/>
                                    <Run Text="تعديل جهاز"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource DeleteButton}"
                                    Click="DeleteMachine_Click" Width="126">
                                <TextBlock>
                                    <Run Text="🗑️ "/>
                                    <Run Text="حذف جهاز"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource SuccessButton}"
                                    Click="RefreshStatuses_Click"
                                    Margin="25,0,10,0" Width="137">
                                <TextBlock>
                                    <Run Text="🔄 "/>
                                    <Run Text="تحديث الحالات"/>
                                </TextBlock>
                            </Button>
                        </StackPanel>

                        <!-- Device List -->
                        <Border Grid.Row="2"
                                Background="White"
                                CornerRadius="12"
                                Margin="0,0,0,20">
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                            </Border.Effect>

                            <Grid>
                                <!-- List Header -->
                                <Border Background="#F3F4F6" 
                                        CornerRadius="12,12,0,0" 
                                        Height="50"
                                        VerticalAlignment="Top"
                                        Padding="20,0">
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Right" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="📋" FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="قائمة الأجهزة المتصلة" 
                                                   FontSize="15" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1F2937"/>
                                    </StackPanel>
                                </Border>

                                <ListBox x:Name="MachineListBox" 
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         Margin="0,50,0,0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Device Icon -->
                                                <Border Grid.Column="0" 
                                                        Background="#E8F5E9" 
                                                        Width="55" 
                                                        Height="55" 
                                                        CornerRadius="12"
                                                        Margin="0,0,20,0">
                                                    <TextBlock Text="📱" 
                                                               FontSize="30"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Device Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding MachineAlias}" 
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               Foreground="#1F2937"/>
                                                    <TextBlock Text="{Binding IpAddress}" 
                                                               FontSize="13"
                                                               Foreground="#6B7280"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <!-- Status Info -->
                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal" 
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            FlowDirection="LeftToRight">
                                                    <Border Background="#F0F4FF" 
                                                            CornerRadius="8" 
                                                            Padding="12,8"
                                                            Margin="0,0,15,0">
                                                        <StackPanel>
                                                            <TextBlock Text="المستخدمون" 
                                                                       FontSize="11" 
                                                                       Foreground="#6B7280"
                                                                       TextAlignment="Center"/>
                                                            <TextBlock Text="{Binding UserCount}" 
                                                                       FontSize="16" 
                                                                       FontWeight="Bold"
                                                                       Foreground="#667EEA"
                                                                       TextAlignment="Center"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <Border Background="#FEF3F2" 
                                                            CornerRadius="8" 
                                                            Padding="12,8"
                                                            Margin="0,0,20,0">
                                                        <StackPanel>
                                                            <TextBlock Text="البصمات" 
                                                                       FontSize="11" 
                                                                       Foreground="#6B7280"
                                                                       TextAlignment="Center"/>
                                                            <TextBlock Text="{Binding FingerprintCount}" 
                                                                       FontSize="16" 
                                                                       FontWeight="Bold"
                                                                       Foreground="#EF4444"
                                                                       TextAlignment="Center"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <Border CornerRadius="8" 
                                                            Padding="15,10"
                                                            MinWidth="90">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#FEF3F2"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontWeight="Bold" FontSize="14" TextAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="{Binding Status}"/>
                                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                            <Setter Property="Foreground" Value="#10B981"/>
                                                                            <Setter Property="Text" Value="متصل"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                            <Setter Property="Text" Value="غير متصل"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Device Actions -->
                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource SuccessButton}"
                                    Click="TestConnection_Click"
                                    Margin="0,0,0,0" Width="143">
                                <TextBlock>
                                    <Run Text="🔌 "/>
                                    <Run Text="اختبار الاتصال"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource PurpleButton}"
                                    Click="DeviceSettings_Click" Width="150">
                                <TextBlock>
                                    <Run Text="⚙️ "/>
                                    <Run Text="إعدادات الجهاز"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource PrimaryButton}"
                                    Click="SyncUsers_Click" Width="225">
                                <TextBlock>
                                    <Run Text="🔄 "/>
                                    <Run Text="مزامنة المستخدمين والبصمات"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource EditButton}"
                                    Click="CopyUsers_Click" Width="200">
                                <TextBlock>
                                    <Run Text="📋 "/>
                                    <Run Text="نسخ المستخدمين لجهاز آخر"/>
                                </TextBlock>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Attendance Logs Tab -->
                <TabItem Style="{StaticResource ModernTab}">
                    <TabItem.Header>
                        <TextBlock>
                            <Run Text="📊 "/>
                            <Run Text="سجلات الحضور"/>
                        </TextBlock>
                    </TabItem.Header>

                    <Grid Margin="10,25,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Auto-Download Settings Panel -->
                        <Border Grid.Row="0" Background="#FEF3C7" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="⏱️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="التحميل التلقائي:" FontWeight="Bold" FontSize="14" Foreground="#92400E" VerticalAlignment="Center"/>
                                </StackPanel>

                                <CheckBox x:Name="AutoDownloadEnabledCheckBox"
                                          Grid.Column="1"
                                          Content="تفعيل"
                                          VerticalAlignment="Center"
                                          Margin="20,0,0,0"
                                          Checked="AutoDownloadEnabledCheckBox_Changed"
                                          Unchecked="AutoDownloadEnabledCheckBox_Changed"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                    <TextBlock Text="كل" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#92400E"/>
                                    <ComboBox x:Name="AutoDownloadIntervalComboBox"
                                              Width="80"
                                              Height="30"
                                              SelectionChanged="AutoDownloadIntervalComboBox_Changed">
                                        <ComboBoxItem Content="30" Tag="30"/>
                                        <ComboBoxItem Content="60" Tag="60" IsSelected="True"/>
                                        <ComboBoxItem Content="120" Tag="120"/>
                                        <ComboBoxItem Content="180" Tag="180"/>
                                    </ComboBox>
                                    <TextBlock Text="دقيقة" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#92400E"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="آخر تحميل:" FontSize="12" Foreground="#92400E" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="LastAutoDownloadText" Text="--" FontSize="12" FontWeight="SemiBold" Foreground="#D97706" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Download Buttons -->
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource SuccessButton}"
                                    Click="DownloadLogs_Click"
                                    Margin="0,0,0,0" Width="296">
                                <TextBlock>
                                    <Run Text="⬇️ "/>
                                    <Run Text="تحميل السجلات من الجهاز المحدد"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource PurpleButton}"
                                    Click="DownloadAllLogs_Click" Width="310">
                                <TextBlock>
                                    <Run Text="📥 "/>
                                    <Run Text="تحميل جميع السجلات من كل الأجهزة"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource EditButton}"
                                    Click="DownloadFingerprints_Click" Width="280" Margin="10,0,0,0">
                                <TextBlock>
                                    <Run Text="👆 "/>
                                    <Run Text="تحميل البصمات من الجهاز المحدد"/>
                                </TextBlock>
                            </Button>

                            <Button Style="{StaticResource AddButton}"
                                    Click="UploadFingerprintsFromFile_Click" Width="280" Margin="10,0,0,0">
                                <TextBlock>
                                    <Run Text="📤 "/>
                                    <Run Text="رفع البصمات من ملف للجهاز"/>
                                </TextBlock>
                            </Button>
                        </StackPanel>

                        <!-- Attendance Log List -->
                        <Border Grid.Row="2"
                                Background="White" 
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                            </Border.Effect>

                            <Grid>
                                <!-- List Header -->
                                <Border Background="#F3F4F6" 
                                        CornerRadius="12,12,0,0" 
                                        Height="50"
                                        VerticalAlignment="Top"
                                        Padding="20,0">
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Right" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="🕐" FontSize="18" Margin="0,0,10,0"/>
                                        <TextBlock Text="سجلات الحضور والانصراف" 
                                                   FontSize="15" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1F2937"/>
                                    </StackPanel>
                                </Border>

                                <ListBox x:Name="AttendanceLogListBox" 
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         Margin="0,50,0,0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Clock Icon -->
                                                <Border Grid.Column="0" 
                                                        Background="#FFF7ED" 
                                                        Width="50" 
                                                        Height="50" 
                                                        CornerRadius="12"
                                                        Margin="0,0,20,0">
                                                    <TextBlock Text="🕐" 
                                                               FontSize="26"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Badge Number -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding UserBadgeNumber}" 
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               Foreground="#1F2937"/>
                                                    <TextBlock Text="رقم بطاقة الموظف" 
                                                               FontSize="12"
                                                               Foreground="#9CA3AF"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>

                                                <!-- Timestamp -->
                                                <StackPanel Grid.Column="2" 
                                                            VerticalAlignment="Center" 
                                                            HorizontalAlignment="Left"
                                                            FlowDirection="LeftToRight">
                                                    <TextBlock Text="{Binding LogTime, StringFormat='yyyy/MM/dd'}" 
                                                               FontSize="13"
                                                               Foreground="#6B7280"
                                                               TextAlignment="Right"/>
                                                    <TextBlock Text="{Binding LogTime, StringFormat='hh:mm:ss tt'}" 
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="#667EEA"
                                                               TextAlignment="Right"
                                                               Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Loading Overlay - Blocks all interactions while visible -->
            <controls:LoadingOverlay x:Name="LoadingOverlay" Grid.RowSpan="3"/>
        </Grid>
    </Border>
</Window>
