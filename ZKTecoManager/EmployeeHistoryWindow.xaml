<Window x:Class="ZKTecoManager.EmployeeHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Change History"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.2" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="ðŸ“œ" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Change History"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="EmployeeNameText"
                                       FontSize="12"
                                       Foreground="#FFFFFFCC"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Style="{StaticResource WinBtn}"
                            Content="âœ•"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="15,0"
                            FlowDirection="LeftToRight"/>
                </Grid>
            </Border>

            <!-- Info Panel -->
            <Border Grid.Row="1" Background="#F9FAFB" Padding="20,15" Margin="20,15,20,0" CornerRadius="10">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Badge:" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,8,0"/>
                        <TextBlock x:Name="BadgeNumberText" Foreground="#1F2937" Margin="0,0,30,0"/>
                        <TextBlock Text="Total Changes:" FontWeight="SemiBold" Foreground="#4B5563" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TotalChangesText" Foreground="#667EEA" FontWeight="Bold"/>
                    </StackPanel>
                    <Button Content="Refresh" Click="RefreshButton_Click"
                            HorizontalAlignment="Right"
                            Background="#667EEA" Foreground="White"
                            Padding="15,8" BorderThickness="0"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- History DataGrid -->
            <Border Grid.Row="2" Margin="20,15,20,20"
                    Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB">
                <Border.Effect>
                    <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                </Border.Effect>

                <DataGrid x:Name="HistoryDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F9FAFB"
                          RowHeight="45"
                          HeadersVisibility="Column"
                          BorderThickness="0">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#667EEA"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date/Time"
                                            Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                            Width="140"/>
                        <DataGridTextColumn Header="Action"
                                            Binding="{Binding ActionTypeArabic}"
                                            Width="90"/>
                        <DataGridTextColumn Header="Changed By"
                                            Binding="{Binding UserName}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Description"
                                            Binding="{Binding Description}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Old Value"
                                            Binding="{Binding OldValue}"
                                            Width="150"/>
                        <DataGridTextColumn Header="New Value"
                                            Binding="{Binding NewValue}"
                                            Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</Window>
