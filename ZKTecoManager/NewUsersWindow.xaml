<Window x:Class="ZKTecoManager.NewUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="نتائج التحميل - Download Results" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Extended"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.3" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="25,0">
                        <TextBlock Text="📊" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="نتائج تحميل السجلات" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <Button Content="✕" Width="40" Height="40" Background="Transparent" Foreground="White" 
                            BorderThickness="0" FontSize="18" FontWeight="Bold" Cursor="Hand"
                            HorizontalAlignment="Left" Margin="15,0" Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Statistics -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Logs -->
                    <Border Grid.Column="0" Background="#EBF5FB" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="📝 إجمالي السجلات" FontSize="14" Foreground="#1F618D" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TotalLogsText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#1F618D" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Existing Users -->
                    <Border Grid.Column="1" Background="#E8F8F5" CornerRadius="10" Padding="20" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="✅ مستخدمون موجودون" FontSize="14" Foreground="#0E6655" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ExistingUsersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0E6655" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- New Users -->
                    <Border Grid.Column="2" Background="#FEF9E7" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="🆕 مستخدمون جدد" FontSize="14" Foreground="#7D6608" FontWeight="SemiBold"/>
                            <TextBlock x:Name="NewUsersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#7D6608" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Tabs -->
                <TabControl Grid.Row="1" BorderThickness="0" Background="White">
                    <!-- Existing Users Tab -->
                    <TabItem Header="المستخدمون الموجودون" FontSize="14" FontWeight="SemiBold">
                        <Border Background="#F9FAFB" Padding="15" Margin="0,10,0,0">
                            <DataGrid x:Name="ExistingUsersDataGrid" Style="{StaticResource DataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="رقم البطاقة" Binding="{Binding BadgeNumber}" Width="*"/>
                                    <DataGridTextColumn Header="اسم الموظف" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="القسم" Binding="{Binding Department}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </TabItem>

                    <!-- New Users Tab -->
                    <TabItem Header="مستخدمون جدد (يحتاجون إضافة)" FontSize="14" FontWeight="SemiBold">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Info Banner -->
                            <Border Grid.Row="0" Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="0,10,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="هؤلاء المستخدمون موجودون في الجهاز لكن غير مسجلين في النظام. قم بتحديدهم وإضافتهم." 
                                               FontSize="13" Foreground="#856404" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- New Users DataGrid -->
                            <Border Grid.Row="1" Background="#F9FAFB" Padding="15">
                                <DataGrid x:Name="NewUsersDataGrid" Style="{StaticResource DataGridStyle}" 
                                          SelectionMode="Extended" IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="رقم البطاقة" Binding="{Binding BadgeNumber}" Width="*"/>
                                        <DataGridTextColumn Header="عدد السجلات" Binding="{Binding LogCount}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- Action Buttons -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="➕ إضافة المستخدمين المحددين" 
                            Style="{StaticResource ModernButton}" Background="#10B981"
                            Click="AddSelectedUsers_Click" Margin="0,0,10,0"/>

                    <Button Grid.Column="1" Content="إغلاق" 
                            Style="{StaticResource ModernButton}" Background="#6B7280" Width="150"
                            Click="CloseButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
