<Window x:Class="ZKTecoManager.ChangesLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="سجل التغييرات - Changes Log"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FlowDirection="RightToLeft">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="سجل التغييرات" FontSize="24" FontWeight="Bold"
                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Filter Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="عرض:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="FilterComboBox" Width="200" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="كل التغييرات" IsSelected="True"/>
                <ComboBoxItem Content="التغييرات الغير مزامنة"/>
                <ComboBoxItem Content="اضافات فقط"/>
                <ComboBoxItem Content="تعديلات فقط"/>
                <ComboBoxItem Content="حذف فقط"/>
            </ComboBox>

            <TextBlock Text="الجدول:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <ComboBox x:Name="TableFilterComboBox" Width="150" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="الكل" IsSelected="True"/>
                <ComboBoxItem Content="الموظفين" Tag="users"/>
                <ComboBoxItem Content="الاقسام" Tag="departments"/>
                <ComboBoxItem Content="الدوامات" Tag="shifts"/>
                <ComboBoxItem Content="الاجهزة" Tag="machines"/>
                <ComboBoxItem Content="الاستثناءات" Tag="employee_exceptions"/>
            </ComboBox>

            <Button Content="تحديث" Margin="20,0,0,0" Padding="15,5" Click="RefreshButton_Click"
                    Background="#3498DB" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Changes DataGrid -->
        <DataGrid Grid.Row="2" x:Name="ChangesDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  AlternatingRowBackground="#F9F9F9"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  FlowDirection="RightToLeft">
            <DataGrid.Columns>
                <DataGridTextColumn Header="التاريخ والوقت" Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="140"/>
                <DataGridTextColumn Header="المستخدم" Binding="{Binding UserName}" Width="120"/>
                <DataGridTextColumn Header="العملية" Binding="{Binding ActionTypeArabic}" Width="80"/>
                <DataGridTextColumn Header="الجدول" Binding="{Binding TableNameArabic}" Width="100"/>
                <DataGridTextColumn Header="الوصف" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="IP" Binding="{Binding IpAddress}" Width="100"/>
                <DataGridCheckBoxColumn Header="تمت المزامنة" Binding="{Binding IsSynced}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="تصدير الى ملف نصي" Padding="20,10" Margin="5"
                    Background="#27AE60" Foreground="White" BorderThickness="0"
                    Click="ExportToTextFile_Click"/>
            <Button Content="فتح ملف السجل" Padding="20,10" Margin="5"
                    Background="#8E44AD" Foreground="White" BorderThickness="0"
                    Click="OpenLogFile_Click"/>
            <Button Content="مسح ملف السجل" Padding="20,10" Margin="5"
                    Background="#E74C3C" Foreground="White" BorderThickness="0"
                    Click="ClearLogFile_Click"/>
            <Button Content="تحديد كمزامن" Padding="20,10" Margin="5"
                    Background="#F39C12" Foreground="White" BorderThickness="0"
                    Click="MarkAsSynced_Click"/>
            <Button Content="اغلاق" Padding="20,10" Margin="5"
                    Background="#95A5A6" Foreground="White" BorderThickness="0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
