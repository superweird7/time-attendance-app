<Window x:Class="ZKTecoManager.DeviceSyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZKTecoManager"
        mc:Ignorable="d"
        Title="مزامنة الجهاز - Device Synchronization" Height="650" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#5568D3" Offset="0"/>
                                            <GradientStop Color="#6A3E8F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Expander Style -->
        <Style TargetType="Expander">
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.2" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="🔄" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="مزامنة بيانات الجهاز" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Style="{StaticResource WinBtn}" 
                            Content="✕" 
                            Click="CloseButton_Click"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Margin="15,0"
                            FlowDirection="LeftToRight"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30,25,30,30">
                    <!-- Device Info -->
                    <Border Background="#F0F4FF" 
                            CornerRadius="10" 
                            Padding="20,15" 
                            Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel>
                                <TextBlock x:Name="DeviceInfoTextBlock" 
                                           Text="مزامنة مع الجهاز: [اسم الجهاز]" 
                                           FontWeight="Bold" 
                                           FontSize="15"
                                           Foreground="#667EEA"
                                           TextAlignment="Right"/>
                            </StackPanel>
                            <TextBlock Text="📱" FontSize="24" Margin="0,0,15,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Download Section -->
                    <Expander IsExpanded="True">
                        <Expander.Header>
                            <Border Background="#F3F4F6" 
                                    CornerRadius="8" 
                                    Padding="15,10"
                                    Margin="-10,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="⬇️" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="تحميل المستخدمين من جهاز البصمة" 
                                               FontSize="15" 
                                               FontWeight="Bold" 
                                               Foreground="#1F2937"/>
                                </StackPanel>
                            </Border>
                        </Expander.Header>

                        <Border Background="White" 
                                CornerRadius="10" 
                                Padding="20,15" 
                                Margin="0,10,0,0">
                            <StackPanel>
                                <!-- User Options -->
                                <TextBlock Text="خيارات المستخدمين:" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="#374151"
                                           Margin="0,0,0,12"
                                           TextAlignment="Right"/>
                                <RadioButton x:Name="DownloadAllUsersRadio" 
                                             Content="تحميل جميع المستخدمين على الجهاز" 
                                             IsChecked="True" 
                                             GroupName="UserDownloadType"/>
                                <RadioButton x:Name="DownloadNewUsersRadio" 
                                             Content="تحميل المستخدمين الجدد فقط" 
                                             GroupName="UserDownloadType"/>

                                <!-- Biometric Options -->
                                <TextBlock Text="خيارات البيانات البيومترية:" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="#374151"
                                           Margin="0,15,0,12"
                                           TextAlignment="Right"/>
                                <CheckBox x:Name="IncludeFingerprintsCheckBox" 
                                          Content="تضمين البصمات" 
                                          IsChecked="True"/>
                                <CheckBox x:Name="IncludeFacesCheckBox" 
                                          Content="تضمين قوالب الوجه"/>

                                <!-- Download Button -->
                                <Button Content="🔽  بدء التحميل" 
                                        Style="{StaticResource PrimaryButton}"
                                        Click="DownloadUsers_Click"
                                        Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Expander>

                    <!-- Upload Section -->
                    <Expander>
                        <Expander.Header>
                            <Border Background="#F3F4F6" 
                                    CornerRadius="8" 
                                    Padding="15,10"
                                    Margin="-10,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="⬆️" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="رفع البصمات إلى جهاز البصمة" 
                                               FontSize="15" 
                                               FontWeight="Bold" 
                                               Foreground="#1F2937"/>
                                </StackPanel>
                            </Border>
                        </Expander.Header>

                        <Border Background="White" 
                                CornerRadius="10" 
                                Padding="20,15" 
                                Margin="0,10,0,0">
                            <StackPanel>
                                <!-- Step 1: Select User -->
                                <TextBlock Text="1. اختر مستخدماً من البرنامج:" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="#374151"
                                           Margin="0,0,0,10"
                                           TextAlignment="Right"/>
                                <ComboBox x:Name="UsersComboBox" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="UsersComboBox_SelectionChanged" 
                                          DisplayMemberPath="Name"
                                          Margin="0,0,0,20"/>

                                <!-- Step 2: Select Fingerprint -->
                                <TextBlock Text="2. اختر بصمة محفوظة للرفع:" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="#374151"
                                           Margin="0,0,0,10"
                                           TextAlignment="Right"/>
                                <ComboBox x:Name="FingerprintsComboBox" 
                                          Style="{StaticResource ModernComboBox}"
                                          DisplayMemberPath="DisplayText"
                                          Margin="0,0,0,20"/>

                                <!-- Upload Button -->
                                <Button Content="🔼  رفع البصمة المحددة" 
                                        Style="{StaticResource PrimaryButton}"
                                        Click="UploadFingerprint_Click"/>
                            </StackPanel>
                        </Border>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
