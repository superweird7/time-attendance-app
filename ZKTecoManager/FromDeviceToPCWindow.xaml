<Window x:Class="ZKTecoManager.FromDeviceToPCWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ZKTecoManager.Controls"
        Title="من الجهاز إلى الكمبيوتر - From Device To PC" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#667EEA" Offset="0"/>
                                    <GradientStop Color="#764BA2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#667EEA" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#5568D3" Offset="0"/>
                                            <GradientStop Color="#6A3E8F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Download Button Style -->
        <Style x:Key="DownloadButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Opacity="0.4" ShadowDepth="0" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0EA06E" Offset="0"/>
                                            <GradientStop Color="#047857" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#667EEA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#667EEA"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#667EEA"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.2" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="0.5"/>
                        <GradientStop Color="#F093FB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="⬇️" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="تحميل البيانات من الجهاز إلى الكمبيوتر" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Style="{StaticResource WinBtn}" 
                            Content="✕" 
                            Click="CloseButton_Click"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Margin="15,0"
                            FlowDirection="LeftToRight"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F9FAFB" Offset="0"/>
                        <GradientStop Color="#F3F4F6" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Devices Panel -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="12" 
                        Margin="10,10,10,10"
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                Background="#F3F4F6" 
                                CornerRadius="8" 
                                Padding="10,8" 
                                Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="📱" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="الأجهزة" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#1F2937"/>
                            </StackPanel>
                        </Border>

                        <!-- ListBox -->
                        <ListBox Grid.Row="1" 
                                 x:Name="DeviceListBox" 
                                 DisplayMemberPath="MachineAlias"
                                 Margin="0,0,0,10"/>

                        <!-- Select All Button -->
                        <Button Grid.Row="2" 
                                Content="اختيار جميع الأجهزة" 
                                Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </Border>

                <!-- Local Users Panel -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="12" 
                        Margin="10"
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                Background="#F3F4F6" 
                                CornerRadius="8" 
                                Padding="10,8" 
                                Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="المستخدمون في قاعدة البيانات المحلية" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#1F2937"/>
                            </StackPanel>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" 
                                  x:Name="LocalUsersGrid" 
                                  Style="{StaticResource ModernDataGrid}"
                                  AutoGenerateColumns="False"
                                  Margin="0,0,0,10">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="اختيار" Width="60"/>
                                <DataGridTextColumn Header="الرقم" Binding="{Binding UserId}" Width="60"/>
                                <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="رقم البطاقة" Binding="{Binding BadgeNumber}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Count -->
                        <TextBlock Grid.Row="2" 
                                   Text="العدد: 0" 
                                   FontWeight="SemiBold"
                                   Foreground="#6B7280"
                                   Margin="0,5"
                                   TextAlignment="Right"/>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left"
                                    Margin="0,5"
                                    FlowDirection="LeftToRight">
                            <Button Content="اختيار الكل" 
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="5,0"/>
                            <Button Content="عكس التحديد" 
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="5,0"/>
                        </StackPanel>

                        <!-- Options -->
                        <Border Grid.Row="4" 
                                Background="#F9FAFB" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock Text="خيارات التحميل" 
                                           FontWeight="Bold" 
                                           Foreground="#1F2937"
                                           Margin="0,0,0,10"
                                           TextAlignment="Right"/>
                                <RadioButton GroupName="UserType" Content="جميع المستخدمين" IsChecked="True"/>
                                <RadioButton GroupName="UserType" Content="المستخدمون الجدد"/>
                                <RadioButton GroupName="UserType" Content="المستخدمون المحددون"/>
                                <CheckBox Content="تضمين البصمة" IsChecked="True" Margin="0,10,0,0"/>
                                <CheckBox Content="تضمين الوجه"/>
                                <CheckBox Content="الوضع السريع"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- New Users Panel -->
                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="12" 
                        Margin="10"
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect Color="#667EEA" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                Background="#F3F4F6" 
                                CornerRadius="8" 
                                Padding="10,8" 
                                Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="🆕" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="مستخدمون جدد (ليسوا في قاعدة البيانات)" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="#1F2937"/>
                            </StackPanel>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" 
                                  x:Name="NewUsersGrid" 
                                  Style="{StaticResource ModernDataGrid}"
                                  AutoGenerateColumns="False"
                                  Margin="0,0,0,10">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="اختيار" Width="60"/>
                                <DataGridTextColumn Header="الرقم" Binding="{Binding UserId}" Width="60"/>
                                <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="رقم البطاقة" Binding="{Binding BadgeNumber}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Count -->
                        <TextBlock Grid.Row="2" 
                                   Text="العدد: 0" 
                                   FontWeight="SemiBold"
                                   Foreground="#6B7280"
                                   Margin="0,5"
                                   TextAlignment="Right"/>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left"
                                    Margin="0,5"
                                    FlowDirection="LeftToRight">
                            <Button Content="اختيار الكل" 
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="5,0"/>
                            <Button Content="عكس التحديد" 
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="5,0"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="4" 
                                    Orientation="Vertical" 
                                    Margin="0,15,0,0">
                            <Button Content="استعراض المستخدمين في الجهاز" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BrowseDeviceUsers_Click"
                                    Margin="0,0,0,10"/>
                            <Button Content="⬇️  تحميل البيانات" 
                                    Style="{StaticResource DownloadButton}"
                                    Margin="0,0,0,10"/>
                            <ProgressBar Height="25" 
                                         Margin="0,5,0,0"
                                         Background="#E5E7EB"
                                         Foreground="#667EEA"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay - Blocks all interactions while visible -->
            <controls:LoadingOverlay x:Name="LoadingOverlay" Grid.RowSpan="2"/>
        </Grid>
    </Border>
</Window>
