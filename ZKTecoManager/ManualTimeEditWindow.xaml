<Window x:Class="ZKTecoManager.ManualTimeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تعديل الأوقات يدوياً - Manual Time Edit" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.3" ShadowDepth="5" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#F59E0B" Offset="0"/>
                        <GradientStop Color="#D97706" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="25,0">
                        <TextBlock Text="✏️" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="تعديل الأوقات يدوياً" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <Button Content="✕" Width="40" Height="40" Background="Transparent" Foreground="White" 
                            BorderThickness="0" FontSize="18" FontWeight="Bold" Cursor="Hand"
                            HorizontalAlignment="Left" Margin="15,0" Click="CancelButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30">
                <StackPanel>
                    <!-- Warning -->
                    <Border Background="#FFF3CD" BorderBrush="#F59E0B" BorderThickness="2" 
                            CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="تحذير: التعديل اليدوي للأوقات سيتجاوز البصمات الفعلية" 
                                       FontSize="13" Foreground="#856404" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Entries List -->
                    <ItemsControl x:Name="EntriesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9FAFB" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Employee Info -->
                                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                            <TextBlock FontSize="16" FontWeight="Bold" Foreground="#1F2937">
                                                <Run Text="{Binding EmployeeName}"/>
                                                <Run Text=" - " Foreground="#6B7280"/>
                                                <Run Text="{Binding Date, StringFormat='yyyy-MM-dd'}" Foreground="#6B7280"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Time Inputs -->
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Clock In -->
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="وقت الحضور" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                                                <TextBox Text="{Binding ActualClockInString, UpdateSourceTrigger=PropertyChanged}" 
                                                         Height="45" FontSize="14" Padding="10"
                                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="2"/>
                                            </StackPanel>

                                            <!-- Clock Out -->
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Text="وقت الانصراف" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                                                <TextBox Text="{Binding ActualClockOutString, UpdateSourceTrigger=PropertyChanged}" 
                                                         Height="45" FontSize="14" Padding="10"
                                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="2"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="30,0,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="إلغاء" Height="50" FontSize="15" Background="#6B7280" 
                        Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0" 
                        Click="CancelButton_Click"/>

                <Button Grid.Column="1" Content="💾 حفظ التعديلات" Height="50" FontSize="15" Background="#F59E0B" 
                        Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="Bold" Margin="10,0,0,0"
                        Click="SaveButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
