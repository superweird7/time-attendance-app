<Window x:Class="ZKTecoManager.BulkAssignExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ZKTecoManager"
        Title="تعيين الاستثناء - Assign Exception" Height="750" Width="580"
        WindowStartupLocation="CenterOwner"
        Background="Transparent" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <!-- Assign Button Style (Red Gradient) -->
        <Style x:Key="AssignButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" Opacity="0.4" ShadowDepth="0" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DC2626" Offset="0"/>
                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WinBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- TreeView Style -->
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Arial"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#1F2937" Opacity="0.3" ShadowDepth="5" BlurRadius="25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Gradient Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="0.5"/>
                        <GradientStop Color="#B91C1C" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Title -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right" 
                                Margin="25,0"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="⚠️" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="تعيين استثناء للموظفين" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Style="{StaticResource WinBtn}" 
                            Content="✕" 
                            Click="CloseButton_Click"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center"
                            Margin="15,0"
                            FlowDirection="LeftToRight"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="35,25,35,20">
                    <!-- Exception Type -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="نوع الاستثناء" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   Foreground="#374151"
                                   Margin="0,0,0,10"
                                   TextAlignment="Right"/>
                        <ComboBox x:Name="ExceptionTypeComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  DisplayMemberPath="ExceptionName"/>
                    </StackPanel>

                    <!-- Start Date -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="تاريخ البداية" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   Foreground="#374151"
                                   Margin="0,0,0,10"
                                   TextAlignment="Right"/>
                        <DatePicker x:Name="StartDatePicker" 
                                    Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>

                    <!-- End Date -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="تاريخ النهاية" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   Foreground="#374151"
                                   Margin="0,0,0,10"
                                   TextAlignment="Right"/>
                        <DatePicker x:Name="EndDatePicker" 
                                    Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="ملاحظات إضافية" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   Foreground="#374151"
                                   Margin="0,0,0,10"
                                   TextAlignment="Right"/>
                        <TextBox x:Name="NotesTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Height="70" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Employee Selection -->
                    <Border Background="White" 
                            CornerRadius="12"
                            BorderThickness="2"
                            BorderBrush="#E5E7EB"
                            Height="250">
                        <Grid>
                            <!-- Header -->
                            <Border Background="#F3F4F6" 
                                    CornerRadius="12,12,0,0" 
                                    Height="50"
                                    VerticalAlignment="Top"
                                    Padding="20,0">
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="👥" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="اختر الموظفين المراد تحديثهم" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#1F2937"/>
                                </StackPanel>
                            </Border>

                            <!-- TreeView -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Margin="0,50,0,0">
                                <TreeView x:Name="EmployeeTreeView" 
                                          Padding="15">
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate DataType="{x:Type local:NodeViewModel}" 
                                                                  ItemsSource="{Binding Children}">
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           FontSize="13"/>
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer with Buttons -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    CornerRadius="0,0,15,15" 
                    Padding="35,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="إلغاء" 
                            Style="{StaticResource CancelButton}"
                            Click="CloseButton_Click"
                            Margin="0,0,10,0"
                            IsCancel="True"/>

                    <Button Grid.Column="1"
                            Content="⚠️  تعيين الاستثناء" 
                            Style="{StaticResource AssignButton}"
                            Click="AssignButton_Click"
                            Margin="10,0,0,0"
                            IsDefault="True"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
